  <% title @article.title[0..20]+'...' %>

    <!-- BREADCRUMBS -->
    <div class="page-header">
      <div class="container">
        <h1 class="page-title pull-left">News <small>> Articolo</small></h1>
        <ol class="breadcrumb">
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/articles">News</a>
          </li>
          <li class="active">Articolo</li>
        </ol>
      </div>
    </div>
    <!-- END BREADCRUMBS -->

    <!-- PAGE CONTENT -->
    <div class="page-content">
      <div class="container">

        <div class="row">
          <div class="col-md-9">

            <!-- BLOG SINGLE -->
            <div class="blog single full-thumbnail">
              <!-- blog post -->
              <article class="entry-post">
                <header class="entry-header">
                  <h2 class="entry-title">
                    <a href="#"><%= @article.title %></a>
                  </h2>
                  <div class="meta-line clearfix">
                    <div class="meta-author-category pull-left">
                      <span class="post-author">autore: <a href="#">Admin</a></span>
                    </div>
                    <div class="meta-tag-comment pull-right">
                      <span class="post-comment"><i class="fa fa-eye"></i> <%= @article.views %> visualizzazioni</span>
                    </div>
                  </div>
                </header>
                <div class="entry-content clearfix">
                  <figure class="featured-image">
                    <div class="post-date-info clearfix"><span class="post-month"><%= month_name_from(@article.created_at.month, false) %></span><span class="post-date"><%= @article.created_at.day %></span><span class="post-year"><%= @article.created_at.year %></span></div>
                    <img src="<%= @article.image[0] == 'a' ? "/"+@article.image : @article.image %>" class="img-responsive" alt="featured-image" style="width:100%"/>
                  </figure>
                  <div class="excerpt">
                    <p><%= @article.content.html_safe %></p>
                  </div>
                </div>
              </article>
              <!-- end blog post -->
              <hr>

              <!-- SOCIAL SHARING -->
              <div class="social-sharing clearfix">
                <h3 class="section-heading pull-left">Condividi: </h3>
                <ul class="list-inline sharing-tools">
                  <li>
                    <div class="fb-share-button" data-href="http://www.playhorsefarm.com/news/<%= @article.id %>" data-layout="button_count"></div>
                  </li>
                </ul>
              </div>
              <!-- END SOCIAL SHARING -->

              <hr>
              <!-- related post -->
              <section>
                <h3 class="section-heading">Leggi gli altri articoli</h3>
                <ul class="list-unstyled related-post-list row">
                  <% @related_articles.each do |related_article| %>
                  <li class="col-md-4">
                    <a href="/articles/<%= related_article.id %>">
                      <img src="<%= related_article.image[0] == 'a' ? '/'+related_article.image : related_article.image %>" class="img-responsive" alt="Related Post">
                    </a>
                    <a href="/articles/<%= related_article.id %>" class="post-title"><%= related_article.title %></a>
                  </li>
                  <% end %>
                </ul>
              </section>
              <!-- end related post -->
              <hr>
              <!-- comments -->
              <div id="disqus_thread"></div>
              <script type="text/javascript">
                  /* * * CONFIGURATION VARIABLES * * */
                  var disqus_shortname = 'playhorsefarm';

                  /* * * DON'T EDIT BELOW THIS LINE * * */
                  (function() {
                      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                  })();
              </script>
              <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
              <!-- end comments -->
              <hr>
            </div>
            <!-- END BLOG SINGLE -->

          </div>
          <div class="col-md-3">
          <!-- SIDEBAR -->
            <!-- tabbed content -->
            <div class="widget">
              <div class="tabpanel">
                <!-- nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                  <li role="presentation" class="active">
                    <a href="#content-popular" aria-controls="content-popular" role="tab" data-toggle="tab">POPOLARI</a>
                  </li>
                  <li role="presentation">
                    <a href="#content-recents" aria-controls="content-recents" role="tab" data-toggle="tab">RECENTI</a>
                  </li>
                </ul>
                <!-- end nav tabs -->

                <!-- tab panes -->
                <div class="tab-content">
                  <div id="content-popular" class="tab-pane fade in active" role="tabpanel">
                    <ul class="list-unstyled blogposts popular">
                      <% @populars.each do |article| %>
                      <li>
                        <h4 class="post-title"><a href="/articles/<%= article.id %>"><%= article.title %></a></h4>
                        <span class="text-muted"><%= article.created_at.strftime("%d/%m/%Y %H:%M") %> | by Admin</span>
                      </li>
                      <% end %>
                    </ul>
                  </div>
                  <div id="content-recents" class="tab-pane fade" role="tabpanel">
                    <ul class="list-unstyled blogposts latest">
                      <% @recents.each do |article| %>
                      <li>
                        <h4 class="post-title"><a href="/articles/<%= article.id %>"><%= article.title %></a></h4>
                        <span class="text-muted"><%= article.created_at.strftime("%d/%m/%Y %H:%M") %> | by Admin</span>
                      </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
                <!-- end tab panes -->
              </div>
            </div>
            <!-- end tabbed content -->
            <!-- END SIDEBAR -->
          </div>
        </div>

      </div>
    </div>