                    <h3 class="media-heading team-name"><%= staff_row[0].name %></h3>
                    <strong><%= staff_row[0].role %></strong>
                    <hr class="pull-left">
                    <div class="clearfix"></div>
                    <ul class="list-inline social-icon">
                      <li><%= contact_for(staff_row[0], 'phone') %></li>
                      <li><%= contact_for(staff_row[0], 'mail') %></li>
                      <li><%= contact_for(staff_row[0], 'facebook') %></li>
