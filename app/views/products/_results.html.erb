  <h2 class="text-center">RISULTATI DI RICERCA</h2>
  <h3 class="text-center"><small><%= @results.size == 1 ? "#{@results.size} risultato trovato" : "#{@results.size} risultati trovati" %></h3>
  <br>
  <% if @results.empty? %>
    <div class="text-center" style="padding-50px">
      <p class="lead">Nessun risultato disponibile! Riprova inserendo parametri differenti o <a href="/#contact">contattaci</a> per avere informazioni su soluzioni personalizzate.</p class="lead">
  <% else %>
    <% @results.each do |result| %>
    <div class="row search-snippet">
      <div class="col-md-4 text-center">
        <img src="<%= result.picture %>" style="border-radius:10px; height:200px;">
        <hr class="no-desktop">
      </div>
      <div class="col-md-8">
        <p class="text-muted pull-right"><%= result.category.capitalize %> > <%= result.product_type.capitalize %></p>
        <h4><%= result.name %></h4>
        <hr>
        <p><%= result.description %></p>
      </div>
    </div>
    <% end %>
  <% end %>