      <!-- SEARCH FORM -->
      <section>
        <h2 class="text-center">COSA STAI CERCANDO?</h2><br>
        <form class="form-horizontal" action="/srl/vendita-attrezzature" method="post" id="search-form">
          <div class="form-group">
            <label for="category" class="col-sm-2 control-label">Categoria</label>
            <div class="col-sm-8">
              <select id="category" class="form-control" name="category">
                <option value="">Scegli una categoria...</option>
                <option disabled="disabled">------------</option>
                <option value="van">Van</option>
                <option value="box">Box</option>
                <option value="ostacoli">Ostacoli</option>
                <option value="campi">Realizzazione campi</option>
              </select>
            </div>
          </div>
          <div class="form-group type hidden">
            <label for="type" class="col-sm-2 control-label">Tipologia</label>
            <div class="col-sm-8">
              <select id="type" class="form-control" name="type">
                <option value="">Scegli un'opzione...</option>
                <option disabled="disabled">------------</option>
                <option value="nuovo" id="nuovo">Nuovo</option>
                <option value="usato" id="usato">Usato</option>
                <option value="trasporto" id="trasporto" disabled="disabled">Trasporti Ippici</option>
                <option value="noleggio" id="noleggio" disabled="disabled">Noleggio</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary hidden" id="search-button">Cerca</button>
            </div>
          </div>
        </form>
        <hr>
      </section>
